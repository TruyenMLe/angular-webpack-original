{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "outDir": "lib",
        "rootDir": ".",
        "mapRoot": "",
        "baseUrl": "",
        "skipLibCheck": true,
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "main.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true,
        "useCache": true
    }
}
